{# basic_form_template.twig #}
{% block styles %}
<style>
    .error-message {
        color: red;
        font-size: 14px;
        display: block;
        margin-top: 4px;
        word-wrap: break-word;
        max-width: 300px;
        margin: 0 auto;
    }
</style>
{% endblock %}

<div class="text-center">
    <div class="col-md d-inline-block">
        <div class="card mb-3">
            <br>
            <h3>Modifier un Produit</h3>
            <div class="card-header d-flex justify-content-between align-items-center"></div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                <div class="mb-3 text-start">
                    <label class="form-label">Nom</label>
                </div>
                <div class="mb-3">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-user bx-flashing"></i></span>
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <span class="error-message">{{ form_errors(form.nom) }}</span>
                </div>

                <div class="mb-3 text-start">
                    <label class="form-label">Description</label>
                </div>
                <div class="mb-3">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-user bx-flashing"></i></span>
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <span class="error-message">{{ form_errors(form.description) }}</span>
                </div>

                <div class="mb-3 text-start">
                    <label class="form-label">Prix</label>
                </div>
                <div class="mb-3">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-money bx-flashing"></i></span>
                        {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <span class="error-message">{{ form_errors(form.prix) }}</span>
                </div>

                <div class="mb-3 text-start">
                    <label class="form-label">Cat√©gorie de Produit</label>
                </div>
                <div class="mb-3">
                    {{ form_widget(form.categorieProduit, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3 text-start">
                    <label class="form-label">Image</label>
                </div>
                <div class="mb-3">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bxs-image bx-flashing"></i></span>
                        {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Modifier</button>
                <a href="{{ path('app_produit_index') }}" class="btn btn-primary">Retour</a>

                {{ form_end(form) }}

            </div>
        </div>
    </div>
</div>
