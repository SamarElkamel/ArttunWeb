{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}

<div class="card mb-4" id="stat_card">
  <!-- Vos statistiques -->
</div>

<a href="{{ path('app_produit_new') }}" class="btn btn-primary">Create new</a>
<a href="{{ path('app_produit_export_pdf') }}" class="btn btn-primary">Export to PDF</a>

<a href="{{ path('app_produit_stat') }}" class="btn btn-danger">Stat</a>

<div class="card" id="Table">
    <table class="table">
        <!-- Entête de tableau -->
        <thead>
            <tr>
                <!-- Vos en-têtes de colonnes -->
                <th>Ref</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Categorie</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for produit in pagerfanta.getCurrentPageResults() %}
            
            <tr>
                <td>{{ produit.ref }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.categorieProduit.libelle }}</td>
                <td>
                    {% if produit.image %}
                        <img src="{{ asset('uploads/' ~ produit.image) }}" alt="Product Image" style="max-width: 180px; max-height: 90px;">
                    {% else %}
                        No image available
                    {% endif %}
                </td>
                <td>
                   <a href="{{ path('app_produit_show', {'ref': produit.ref}) }}" class="btn btn-primary">Show</a>
                   <a href="{{ path('app_produit_edit', {'ref': produit.ref}) }}">
                        <i class="fas fa-edit"></i> 
                    </a>
                </td>
            
            </tr>
            {% else %}
            <tr>
                <td colspan="7">No records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <nav aria-label="Page navigation">
    <ul class="pagination">
        {% if pagerfanta.hasPreviousPage %}
            <li class="page-item">
                <a class="page-link" href="{{ path('app_produit_index', {'page': 1}) }}" aria-label="First">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        {% endif %}
        
        {% for page in 1..pagerfanta.getNbPages() %}
            <li class="page-item {% if page == pagerfanta.getCurrentPage() %}active{% endif %}">
                <a class="page-link" href="{{ path('app_produit_index', {'page': page}) }}">{{ page }}</a>
            </li>
        {% endfor %}
        
        {% if pagerfanta.hasNextPage %}
            <li class="page-item">
                <a class="page-link" href="{{ path('app_produit_index', {'page': pagerfanta.getNbPages()}) }}" aria-label="Last">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        {% endif %}
    </ul>
</nav>

</div>

<script>
// Votre script de filtrage
</script>

{% endblock %}
{% block script %}

<script>
document.getElementById('searchInput').addEventListener('input', function() {
  var filter, table, tr, td, i, txtValue;
  filter = this.value.toUpperCase();
  table = document.querySelector(".table");
  tr = table.getElementsByTagName("tr");

  // Loop through all table rows, and hide those who don't match the search query
  for (i = 0; i < tr.length; i++) {
    td = tr[i].getElementsByTagName("td")[1]; // Change index to match the column where product names are displayed
    if (td) {
      txtValue = td.textContent || td.innerText;
      if (txtValue.toUpperCase().indexOf(filter) > -1) {
        tr[i].style.display = "";
      } else {
        tr[i].style.display = "none";
      }
    }
  }
});
</script>


{% endblock %}