{% extends 'baseFront.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <section class="section-products">
        <div class="container">
    
        <div class="me-5 ms-n2 pe-5">
    <div id="DataTables_Table_0_filter" class="dataTables_filter">
        <label>
            <input type="search" class=" search-input" placeholder="Search Produit" aria-controls="DataTables_Table_0" id="searchInput">
        </label>

            <div class="row justify-content-center text-center">

                <div class="col-md-8 col-lg-6">
                    <div class="header">
                        <h3>Our Products</h3>
                    </div>
                </div>
            </div>



            <div class="row">
                {% for produit in produits %}
                    <div class="col-md-6 col-lg-4 col-xl-3">
                        <div class="single-product">
                            <div class="part-1">
                                <ul>
                                    <li><a href="#"><i class="fas fa-shopping-cart"></i></a></li>
                                    <li><a href="#"><i class="fas fa-heart"></i></a></li>
                                    <li><a href="#"><i class="fas fa-plus"></i></a></li>
                                    <li><a href="#"><i class="fas fa-expand"></i></a></li>
                                </ul>
                            </div>
                            <div class="part-2">
                                <h3 class="product-title">{{ produit.nom }}</h3>
                                {% if produit.image %}
                                    <img src="{{ asset('uploads/' ~ produit.image) }}" alt="Product Image" style="max-width: 200px; max-height: 120px;">
                                {% else %}
                                    <p>Aucune image disponible</p>
                                {% endif %}
                                <p> {{ produit.description }}</p>
                               <p>Catégorie : {{ produit.categorieProduit.libelle }}</p>
                                <p>Prix : {{ produit.prix }}</p>
                            </div>
                  <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                
                <a class="btn" href="{{ path('add_to_panier', {'ref': produit.ref}) }}" onclick="addToCart(this)"> Shop now</a>
            </div>
        </div>
        </div>
                    
                         </div>
                     </div>
           
                {% endfor %}
            </div>
        </div>
    </section>
    

    <script>
    // Attend que le document soit chargé
    document.addEventListener("DOMContentLoaded", function() {
        // Sélectionne l'élément de champ de recherche
        var searchInput = document.getElementById("searchInput");

        // Ajoute un écouteur d'événements pour l'événement de saisie de texte
        searchInput.addEventListener("input", function() {
            // Récupère le texte saisi dans le champ de recherche
            var searchText = searchInput.value.toLowerCase();

            // Sélectionne tous les éléments de produit
            var products = document.querySelectorAll(".single-product");

            // Parcourt tous les produits
            products.forEach(function(product) {
                // Récupère le nom du produit dans chaque élément de produit
                var productName = product.querySelector(".product-title").innerText.toLowerCase();

                // Vérifie si le nom du produit contient le texte de recherche
                if (productName.includes(searchText)) {
                    // Affiche le produit si le texte de recherche est trouvé dans le nom du produit
                    product.style.display = "block";
                } else {
                    // Masque le produit si le texte de recherche n'est pas trouvé dans le nom du produit
                    product.style.display = "none";
                }
            });
        });
    });
</script>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        var categorieSelect = document.getElementById("categorieProduit");
        var products = document.querySelectorAll(".productItem");

        categorieSelect.addEventListener("change", function() {
            var categorieId = categorieSelect.value;

            products.forEach(function(product) {
                var produitCategorieId = product.getAttribute("data-categorie-id");

                if (categorieId === produitCategorieId || categorieId === "") {
                    product.style.display = "block";
                } else {
                    product.style.display = "none";
                }
            });
        });
    });
</script>



{% block stylesheets %}

    <style>
       /* Button styles */



.btn {
 padding: 1.1em 2em;
 background: none;
 border: 2px solid #fff;
 font-size: 15px;
 color: #131313;
 cursor: pointer;
 position: relative;
 overflow: hidden;
 transition: all 0.3s;
 border-radius: 12px;
 background-color: #ecd448;
 font-weight: bolder;
 box-shadow: 0 2px 0 2px #000;
 margin-left: auto; /* Center the button horizontally */
    margin-right: auto; /* Center the button horizontally */
}

.btn:before {
 content: "";
 position: absolute;
 width: 100px;
 height: 120%;
 background-color: #ff6700;
 top: 50%;
 transform: skewX(30deg) translate(-150%, -50%);
 transition: all 0.5s;
}

.btn:hover {
 background-color: #4cc9f0;
 color: #fff;
 box-shadow: 0 2px 0 2px #0d3b66;
}

.btn:hover::before {
 transform: skewX(30deg) translate(150%, -50%);
 transition-delay: 0.1s;
}

.btn:active {
 transform: scale(0.9);
}

/* Reset styles */
* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

/* Body styles */
body {
    font-family: "Poppins", sans-serif;
    color: #444;
    background-color: #f8f9fa;
}

/* Section Products styles */
.section-products {
    padding: 20px;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
}

/* Search input styles */
.search-input {
    width: 100%;
    padding: 10px;
    margin-bottom: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    outline: none;
}

/* Product grid styles */
.row {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.single-product {
    background-color: #fff;
    padding: 20px;
    margin-bottom: 20px;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
    flex-basis: calc(33.33% - 20px); /* Three products per line with spacing */
}

.single-product:hover {
    transform: translateY(-5px);
}

.part-1 ul {
    list-style: none;
    display: flex;
    justify-content: space-around;
}

.part-1 ul li {
    margin: 0 5px;
}

.part-2 {
    text-align: center;
}

.product-title {
    font-size: 1.2rem;
    font-weight: 500;
    margin-bottom: 10px;
}

.product-title a {
    text-decoration: none;
    color: #333;
}

.product-title a:hover {
    color: #fe302f;
}

.product-img {
    max-width: 100%;
    height: auto;
    border-radius: 5px;
    margin-bottom: 10px;
}

.product-description {
    font-size: 1rem;
    margin-bottom: 10px;
}

.product-info {
    font-size: 0.9rem;
    margin-bottom: 5px;
}

/* Button styles */
.btn {
    display: inline-block;
    padding: 10px 20px;
    background-color: #fe302f;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    text-decoration: none;
}

.btn:hover {
    background-color: #d63031;
}

/* Responsive styles */
@media screen and (max-width: 768px) {
    .single-product {
        flex-basis: calc(50% - 20px); /* Two products per line with spacing */
    }
}
</style>
{% endblock %}
{% endblock %}

  
   



