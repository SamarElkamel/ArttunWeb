{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
<a href="{{ path('app__venement_index') }}" id="back-button">
  <i class="fas fa-arrow-left"></i> Back to list
</a>
    <h1>Events</h1>

    <table class="table">
        <tbody>
    
            <tr>
                <th>Title</th>
                <td>{{ _venement.libelle }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ _venement.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ _venement.date ? _venement.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Costs</th>
                <td>{{ _venement.frais }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                 <td>
        <img src="{{ asset(_venement.photo) }}" class="event-photo">
    </td>
                
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ _venement.localisation }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ _venement.siteweb }}</td>
            </tr>
        </tbody>
    </table>

<span style="display: flex; align-items: center;">
  <a href="{{ path('app__venement_edit', {'id': _venement.id}) }}">
    <i class="fas fa-edit"></i> Edit
  </a>
  {{ include('Evenement/_delete_form.html.twig') }}
</span>



{% block stylesheets %}
  <style>
  .event-photo {
    width: 350px;
    height: 350px;
  }

   #back-button {
  display: inline-block;
  margin : 10px 0 20px 10px 
}

h1 {
  text-align: center;
}

  </style>
 {% endblock %}


{% endblock %}
