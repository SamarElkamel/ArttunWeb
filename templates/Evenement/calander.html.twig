{% extends 'baseFront.html.twig' %}

{% block body %}
<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js'></script>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
          initialView: 'dayGridMonth',
          events: [
            {% for event in events %}
              {
                title: '{{ event.libelle }}',
                start: '{{ event.date|date('Y-m-d') }}',
                end: '{{ event.date|date('Y-m-d') }}',
                photo:  '{{ asset("/uploads/" ~ event.photo) }}',
                id: '{{ event.id }}',
              },
            {% endfor %}
          ],
          
       eventContent: function(arg) {
          return {
            html: '<div style="text-align: center;"><img src="' + arg.event.extendedProps.photo + '" style="max-width:100px;max-height:100px;"><br>' + arg.event.title + '</div>',
          };
        },
        
      });
        calendar.render();
      });
    </script>
  </head>
  <body>
    <div id='calendar'></div>
  </body>
  <style>
    #calendar {
      margin: 100px; 
    }
  </style>
</html>
{% endblock %}
