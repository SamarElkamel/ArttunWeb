{% extends 'baseFront.html.twig' %}

{% block title %}Command index{% endblock %}

{% block body %}
{% block script %}
<script src="https://cdn.jsdelivr.net/gh/davidshimjs/qrcodejs/qrcode.min.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        var containers = document.querySelectorAll('.qrcode-container');
        containers.forEach(function(container) {
            var reference = container.dataset.reference;
            var qrcode = new QRCode(container, {
                text: reference,
                width: 100,
                height: 100
            });
        });
    });
</script>
{% endblock %}

                       
<div class="image-container">
    <img src="{{asset('assets/img/shop1.jpg') }}" alt="Image">
</div>
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>Reference</th>
                <th>Nom produit</th>
                <th>Date</th>
                <th>Prix</th>
                <th>Nom client</th>
            </tr>
        </thead>
        <tbody>
            {% for command in commands %}
                <tr>
                    <td>
                        <div class="qrcode-container" data-reference="{{ command.reference }}"></div>
                    </td>
                    <td>{{ command.idproduit.nom }}</td>
                    <td>{{ command.date ? command.date|date('Y-m-d') : '' }}</td>
                    <td>{{ command.prix }}</td>
                    <td>{{ command.idclient.nom }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% block stylesheets %}
<style>
   
/* Add your modern styles here */
    .table {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
        font-family: Arial, sans-serif;
        background-color: #fff;
    }

    .table th,
    .table td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .table th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    .qrcode-container {
        width: 100px;
        height: 100px;
        margin: 0 auto;
    }

    .table-container {
        overflow-x: auto;
    }

    .table-container::-webkit-scrollbar {
        width: 12px;
    }

    .table-container::-webkit-scrollbar-thumb {
        background-color: rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .table-container::-webkit-scrollbar-track {
        background: transparent;
    }

    .image-container {
        text-align: center;
        margin-bottom: 20px;
    }

    .image-container img {
        max-width: 100%;
        max-height: 100%;
    }

</style>
{% endblock %}
{% endblock %}
