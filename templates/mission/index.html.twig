{% extends 'basemission.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-body">
                       
                       
                        <h1 class="text-center mb-4" style="font-size: 2.5rem; color: #333; font-weight: bold; text-transform: uppercase;">LISTE DES MISSIONS</h1>
                        <div class="row justify-content-end mb-3"> <!-- Utilisation de justify-content-end pour aligner à droite -->
                            <div class="col-md-2">
                                <a href="{{ path('app_commandes_index')}}" class="btn btn-primary">Ajouter</a>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-borderless table-hover mx-auto" style="color: black; background-color: white; border-radius: 40px;">
                                <thead class="thead-dark">
                                    <tr>
                                        <th class="text-center">Référence</th>
                                        <th class="text-center">État</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for mission in missions %}
                                        <tr>
                                            <td class="text-center">{{ mission.idMission }}</td>
                                            <td class="text-center">
                                                {% if mission.etat == "non livré" %}
                                                    <span class="badge bg-label-danger">{{ mission.etat }}</span>
                                                {% else %}
                                                    <span class="badge bg-label-success">{{ mission.etat }}</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                {% if mission.etat == "non livré" %}
                                                    <a href="{{ path('update_mission_state', { 'idMission': mission.idMission }) }}">
                                                        <img src="{{ asset('assets/img/elements/fast-delivery.png') }}" alt="Check Image" width="50" height="50">
                                                    </a>
                                                {% else %}
                                                    <img src="{{ asset('assets/img/elements/check.png') }}" alt="Check Image" width="30" height="30">
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="3" class="text-center">Aucun enregistrement trouvé</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
