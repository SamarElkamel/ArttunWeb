{% extends 'base.html.twig' %}

{% block title %}Livreur{% endblock %}

{% block body %}
    <h1>Livreur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livreur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ livreur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ livreur.prenom }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img class="font-image" src="{{ asset('assets/img/' ~ livreur.photo) }}" alt="image"></td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ livreur.mail }}</td>
            </tr>
            <tr>
                <th>Mdp</th>
                <td>{{ livreur.mdp }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_livreur_index') }}">back to list</a>

    <a href="{{ path('app_livreur_edit', {'id': livreur.id}) }}">edit</a>

    {{ include('livreur/_delete_form.html.twig') }}
{% endblock %}
