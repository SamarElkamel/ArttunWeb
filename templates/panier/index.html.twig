
{% extends 'baseFront.html.twig' %}

{% block title %}Panier index{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<div class="cart-header">
    <h1>Your Shopping Cart</h1>
</div>
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for panier in paniers %}
                <tr>
                    <td><img src="{{ asset(panier.refproduit.image) }}" alt="Product Image"></td>
                    <td>{{ panier.refproduit.nom }}</td>
                    <td>{{ panier.refproduit.prix }}</td>
             <td>
                      <form action="{{ path('app_panier_delete', {'id': panier.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this item?')">
                     <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ panier.id) }}">
                     <button type="submit" class="delete-button" title="Delete"><i class="fas fa-trash-alt"></i></button>
                        </form>
            </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
<div class="cart-buttons">
    <p class="total-price">Total Price: {{ totalPrice }} DT</p>
    <p class="nbitems">Items: {{ nbitems }}</p>
    <a href="{{ path('checkout') }}" class="checkout-button" >Checkout</a>
</div>


